{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "module": "CommonJS",
    "target": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["../node_modules/@types"],
    "jsx": "react-jsx",
    "outDir": "build",
    // optional
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    // tsx-specific:
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["./"]
}
